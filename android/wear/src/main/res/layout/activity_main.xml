<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
  android:id="@+id/container"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.reactnativeandroidweardemo.MainActivity"
  tools:deviceIds="wear">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/current_count"/>

    <TextView
      android:id="@+id/tvCounter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="60sp"
      tools:text="0"/>

    <Button
      android:id="@+id/btnWearIncreaseCounter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/increase_phone_counter"
      android:textColor="@color/white"
      tools:enabled="true"/>

    <Button
      android:id="@+id/btnWearLaunchPhoneApp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/launch_phone_app"/>
  </LinearLayout>
</android.support.wearable.view.BoxInsetLayout>
